<h1>Listing locations</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Location</th>
    <th>Description</th>
    <th>Link</th>
    <th colspan="3"> </th>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%=h location.id %></td>
    <td><%=h location.name %></td>
    <td><%=h location.latitude %></td>
    <td><%=h location.longitude %></td>
    <td><%=h location.location %></td>
    <td><%=h location.description  %></td>
    <td><%=h location.link %></td>

    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

